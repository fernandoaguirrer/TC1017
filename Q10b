Heres is my code for the other question for the quiz


      #include <iostream>
      using namespace std;
      
      // Jesús Fernando Aguirre Robles A01224994
      int dotproduct(int arr1[], int arr2[], int array_size){
      	int x=array_size;
      	int p=0;
      
      	for(int i=0; i<x; i++){	//for para los numeros del arreglo 1
      		cout<<"Introduce un numero para el array 1"<<endl;
      		cin>>arr1[i];
      	}
      	for(int j=0; j<x; j++){	//for para los numeros del arreglo 2
      		cout<<"Introduce un numero para el array 2"<<endl;
      		cin>>arr2[j];
      	}
      		for(int k=0; k<x; k++){
      			p=p+(arr1[k]*arr2[k]);
      		}
      	return p;
      }
      
      int main(){
      	
      	int x;
      
      	cout<<"Introduce el tamaño del array"<<endl;
      	cin>>x;
      
      	int arr1[x];
      	int arr2[x];
      
      	cout<<"El producto es: "<<dotproduct(arr1, arr2, x)<<endl;
      
      	return 0;
      }
