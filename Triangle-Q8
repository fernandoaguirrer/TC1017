#include <iostream>
using namespace std;

void triangle(int x){
	
	for(int i=1;i<=x;i++){
		for(int f=1;f<=i;f++){
			cout<<"t";
		}
		cout<<endl;
	}

		for(int k=x-1;k>=0;k--){
			for(int y=1;y<=k;y++){
				cout << "t";
			}
			cout << endl;
		}

}

int main(){

	int n;
	cout << "Introduce el tamaÃ±o del triangulo" << endl;
	cin >> n;
	
	triangle(n);
}
